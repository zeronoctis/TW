{% extends '::base.html.twig' %}

{% block body %} 

	<section id="error" class="container">
	
		{{ form_start(form, {attr: {novalidate: 'novalidate'}}) }}

		<div class="row-fluid">
	        <div class="span6" align="right">

				<fieldset class="registration-form">
					<div class="control-group" align="center">
						{{ error }}
						<div class="controls">
							{{ form_errors(form.facility) }}
							{{ form_widget(form.facility, { 'attr': {'class': 'input-xlarge', 'placeholder': 'Facility', 'id': 'facility', 'name': 'facility'}}) }}
						</div>
					</div>
					<div class="control-group" align="center">
						<div class="controls">
							{{ form_label(form.Add) }}
							{{ form_widget(form.Add, { 'attr': {'class': 'btn btn-success btn-large btn-block', 'id': 'submit', 'name': 'submit'}}) }}
						</div>
					</div>
					<div class="control-group" align="center">
						<div class="controls">
							{{ form_label(form.Remove) }}
							{{ form_widget(form.Remove, { 'attr': {'class': 'btn btn-success btn-large btn-block', 'id': 'submit', 'name': 'submit'}}) }}
						</div>
					</div>
					<div class="control-group" align="center">
						<div class="controls">
							{{ form_label(form.Back) }}
							{{ form_widget(form.Back, { 'attr': {'class': 'btn btn-success btn-large btn-block', 'id': 'submit', 'name': 'submit'}}) }}
						</div>
					</div>
				</fieldset>
			</div>

	        <div class="span3" align="left">

				<fieldset class="registration-form">
					<div class="control-group" align="center">
						<h3>All existent facilities:</h3>
						<div class="controls" align="left">
							{% for facility in facilities %}
								(*) {{ facility.facility }} <br/>
							{% endfor %}
						</div>
					</div>
				</fieldset>
			</div>
		</div>

		{{ form_end(form) }}

	</section>

{% endblock %}

